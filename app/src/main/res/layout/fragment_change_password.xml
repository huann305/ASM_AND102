<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_username"
            android:text="Mật khẩu cũ:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_old_password"
            android:height="45dp"
            android:background="@drawable/custom_input_login"
            android:layout_below="@+id/tv_username"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pass"
            android:text="Mật khẩu mới:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_new_password"
            android:height="45dp"
            android:background="@drawable/custom_input_login"
            android:layout_below="@+id/tv_pass"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_confirm_pass"
            android:text="Nhập lại mật khẩu mới:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_confirm_new_password"
            android:height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_input_login"
            android:layout_below="@+id/tv_confirm_pass"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_change_password"
        android:textColor="#fff"
        android:background="@drawable/custom_btn_bgr_yl_boder_black"
        android:text="Đổi mật khẩu"/>
</LinearLayout>